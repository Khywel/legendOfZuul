import java.util.*;
/**
 * Class Potion - an Item which can be tooken by the player to increase
 * some of his attributes : Charisma, Strenght, Agility, Intelligence,
 * and Speed.
 * This class is part of the "Legend of Zuul" .
 *
 * @author  Ang√©lique Lanneau
 * @version 2018.11.14
 */
public class Potion extends Food
{
    protected int Charisma;
    protected int Strenght;
    protected int Agility;
    protected int Intelligence;
    protected int Speed;

    /**
     * Constructor of the class Potion.
     * Return true if the potion is created
     * Return false if one of the parameter is wrong : if one
     * of the attributes point is negative
     * @param : Charisma, Strenght, Agility, Intelligence,Speed
     */
    public Potion(int Charisma, int Strenght, int Agility, int Intelligence, int Speed, int RestauredHP, int RestauredMana, int Poison, String itemName, int price, boolean saleable)
    {
        super(RestauredHP, RestauredMana, Poison, itemName, price, saleable);
        this.Charisma = Charisma;
        this.Strength = Strength;
        this.Agility = Agility;
        this.Intelligence = Intelligence;
        this.Speed = Speed;
    }

    /** getcharisma is a method which gives how many
     *  charisma points is given by the potion.
     * @return Charisma
     */
    public int getCharisma()
    {
      return Charisma;
    }

    /** getStrenght is a method which gives how many
     *  strenght points is given by this potion.
     * @return : Strenght
     */
    public int getStrenght()
    {
      return Strength;
    }

    /** getAgility is a method which gives how many
     *  agility points is given by this potion.
     * @return : Agility
     */
    public int getAgility()
    {
      return Agility;
    }

    /** getIntelligence is a method which gives how many
     *  Intelligence points is given by this potion.
     * @return : Intelligence
     */
    public int getIntelligence()
    {
      return Intelligence;
    }

    /** getSpeed is a method which gives how many
     *  speed points is given by this potion.
     * @return : Speed
     */
    public int getSpeed()
    {
      return Speed;
    }
  }
